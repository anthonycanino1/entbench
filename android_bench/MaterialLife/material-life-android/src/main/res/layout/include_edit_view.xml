<?xml version="1.0" encoding="utf-8"?>

<com.juankysoriano.materiallife.ui.sketch.editor.EditorMenuView xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/edit_layout"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">

  <io.codetail.widget.RevealFrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.juankysoriano.materiallife.ui.sketch.editor.ClearView
      android:id="@+id/clear_view"
      android:background="@color/primary_bright"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:visibility="invisible" />
  </io.codetail.widget.RevealFrameLayout>


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/edit_menu_height"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal"
    android:background="@color/primary_bright">

    <com.juankysoriano.materiallife.ui.sketch.PixelButton
      style="@style/PixelText.Button"
      android:id="@+id/edit_fab_cancel"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:text="@string/cancel_button_text" />

    <Space
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="0dp" />

    <com.juankysoriano.materiallife.ui.sketch.PixelButton
      style="@style/PixelText.Button"
      android:id="@+id/edit_fab_clear"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:text="@string/clear_button_text" />

    <Space
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="0dp" />

    <com.juankysoriano.materiallife.ui.sketch.PixelButton
      style="@style/PixelText.Button"
      android:id="@+id/edit_fab_accept"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:text="@string/done_button_text" />

  </LinearLayout>

</com.juankysoriano.materiallife.ui.sketch.editor.EditorMenuView>

