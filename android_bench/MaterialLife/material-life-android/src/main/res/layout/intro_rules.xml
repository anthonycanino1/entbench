<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  style="Slide"
  android:id="@+id/main"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <com.juankysoriano.materiallife.ui.sketch.PixelTextView
    style="@style/PixelText.Description.Title"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:layout_weight="0.25"
    android:text="@string/game_rules" />

  <com.juankysoriano.materiallife.ui.sketch.PixelTextView
    style="@style/PixelText.Description"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:text="@string/rules_explanation"
    android:layout_weight="0.14" />

  <Space
    android:layout_width="wrap_content"
    android:layout_height="@dimen/intro_bottom_bar_height" />
</LinearLayout>